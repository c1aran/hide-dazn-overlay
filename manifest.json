{
  "manifest_version": 2,

  "name": "Hide DAZN-Overlay",
  "description": "Disable the annoying DAZN-Overlay.",
  "version": "1.0.0",

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": ["*://www.dazn.com/*", "tabs"],

  "page_action": {
    "default_icon": "on.png"
  },

  "content_scripts": [{
    "js": ["jquery-3.2.1.min.js", "script.js"],
    "matches": ["*://www.dazn.com/*"]
  }]
}
